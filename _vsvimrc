set ignorecase
set smartcase
" Line number
set number
" Highlight search & incremental search
set hlsearch
set incsearch
" Bind ESC in normal mode to clear highlight search
nnoremap <Esc> :nohlsearch<CR>
" Necessity Evil Reloaded
set clipboard=unnamedplus
vmap <C-V> gp
set cursorline

" Use tab to indent
vmap <tab> >gv
vmap <s-tab> <gv

nmap <Space> za

nmap <S-k> :vsc Edit.QuickInfo<CR>
nmap gi :vsc Edit.GotoImplementation<CR>
